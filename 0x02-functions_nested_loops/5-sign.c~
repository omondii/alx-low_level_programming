#include "main.c"
/**
 *
 *print_sign - checks if a number is positive or negative and assigns it
 * a corresponding sign
 *
 *Return: return 0 if number is zero, -1 if number is -, 1 if number is +
 */
int print_sign(int n)
{
	int n;

	if (n > 0)
	{
		_putchar('+, 1');
	}
	elif (n < 0)
	{
		_putchar('-, -1');
	}
	elif (n == 0)
	{
		-putchar('0, o');
	}
}
